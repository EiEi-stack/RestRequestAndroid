<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="350dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        >
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_currentPlace"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:hint="@string/show_current_place"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_toRightOf="@+id/tv_currentPlace"
            android:id="@+id/showCurrentPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_currentPlace"
            android:text="@string/show_current_place"/>
    </LinearLayout>

</LinearLayout>